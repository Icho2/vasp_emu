#!/usr/bin/env python3
""" Modules """
import argparse
from vasp_emu.emulate import Emulator

def get_args():
    """Parse all command line arguments for vasp_emu"""
    parser = argparse.ArgumentParser(
                description="VASP Emulator Using Machine-Learned Atomic Potentials",
                prog="vasp_emu")
    parser.add_argument('INCAR',type=str,default='INCAR',nargs='?',
                        help='INCAR file with configuration settings (DEFAULT: INCAR)')
    parser.add_argument("-i","--initial-image",type=str,default='POSCAR',nargs='?',
                        help='File containing initial-image (DEFAULT: POSCAR)')
    parser.add_argument("-f","--final-image",type=str,default=None,nargs='?',
                        help='File containing initial-image for NEB (DEFAULT: None)')
    parser.add_argument("-R","--reset",action="store_true",
                        help='Reset your directory (DEFAULT: False)')
    return parser.parse_args()

if __name__ == "__main__":
    emu = Emulator(get_args())
    emu.run()
